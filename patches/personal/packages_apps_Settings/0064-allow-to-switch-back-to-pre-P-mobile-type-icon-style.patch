 </resources>
diff --git a/res/values/custom_strings.xml b/res/values/custom_strings.xml
index 348c0cfaf4..f3c4ab7417 100644
--- a/res/values/custom_strings.xml
+++ b/res/values/custom_strings.xml
@@ -88,4 +88,7 @@
     <string name="double_tap_sleep_gesture_title">Double tap to sleep on status bar</string>
     <!--Double Tap to Sleep Lockscreen-->
     <string name="double_tap_sleep_lockscreen_title">Double tap to sleep on lockscreen</string>
+    <!-- P style network bar -->
+    <string name="use_old_mobiletype_title">Old mobiletype</string>
+    <string name="use_old_mobiletype_summary">Use pre-P mobiletype icons for signal\n(Reboot required)</string>
 </resources>
diff --git a/res/xml/display_settings.xml b/res/xml/display_settings.xml
index e17b4bc9be..5bff3f217c 100644
