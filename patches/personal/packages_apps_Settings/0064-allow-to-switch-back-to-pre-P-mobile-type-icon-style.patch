---
 res/values-ru/custom_strings.xml | 3 +++
 res/values/custom_strings.xml    | 3 +++
 res/xml/display_settings.xml     | 6 ++++++
 3 files changed, 12 insertions(+)

diff --git a/res/values-ru/custom_strings.xml b/res/values-ru/custom_strings.xml
index 9652f8cef7..c3e15c68ed 100644
--- a/res/values-ru/custom_strings.xml
+++ b/res/values-ru/custom_strings.xml
@@ -90,4 +90,7 @@
     <string name="double_tap_sleep_gesture_title">Двойное касание статусбара для перехода в сон</string>
     <!--Double Tap to Sleep Lockscreen-->
     <string name="double_tap_sleep_lockscreen_title">Двойное касание экрана блокировки для перехода в сон</string>
