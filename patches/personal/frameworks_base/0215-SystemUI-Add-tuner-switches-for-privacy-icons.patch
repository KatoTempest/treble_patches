---
 packages/SystemUI/res/values-ru/custom_strings.xml |  6 ++++++
 packages/SystemUI/res/values/custom_strings.xml    |  6 ++++++
 packages/SystemUI/res/xml/tuner_prefs.xml          | 13 +++++++++++++
 3 files changed, 25 insertions(+)

diff --git a/packages/SystemUI/res/values-ru/custom_strings.xml b/packages/SystemUI/res/values-ru/custom_strings.xml
index 9ee0112e08f..11ac548b50a 100644
--- a/packages/SystemUI/res/values-ru/custom_strings.xml
+++ b/packages/SystemUI/res/values-ru/custom_strings.xml
@@ -47,4 +47,10 @@
     <string name="quick_settings_reboot_label">Перезагрузка</string>
     <string name="quick_settings_reboot_recovery_label">Рекавери</string>
     <string name="quick_settings_poweroff_label">Выключение</string>
+    <!-- Name of the camera status bar icon. -->
+    <string name="status_bar_camera">Камера</string>
+    <!-- Name of the location status bar icon. -->
+    <string name="status_bar_location">Местоположение</string>
+    <!-- Name of the microphone status bar icon. -->
+    <string name="status_bar_microphone">Микрофон</string>
 </resources>
diff --git a/packages/SystemUI/res/values/custom_strings.xml b/packages/SystemUI/res/values/custom_strings.xml
index 66775296316..9d272607065 100644
--- a/packages/SystemUI/res/values/custom_strings.xml
+++ b/packages/SystemUI/res/values/custom_strings.xml
@@ -45,4 +45,10 @@
     <string name="quick_settings_reboot_label">Reboot</string>
     <string name="quick_settings_reboot_recovery_label">Recovery</string>
     <string name="quick_settings_poweroff_label">Power off</string>
+    <!-- Name of the camera status bar icon. -->
+    <string name="status_bar_camera">Camera</string>
+    <!-- Name of the location status bar icon. -->
+    <string name="status_bar_location">Location</string>
+    <!-- Name of the microphone status bar icon. -->
+    <string name="status_bar_microphone">Microphone</string>
 </resources>
diff --git a/packages/SystemUI/res/xml/tuner_prefs.xml b/packages/SystemUI/res/xml/tuner_prefs.xml
index 6eec5dc9e1c..9dc3cc5c274 100644
--- a/packages/SystemUI/res/xml/tuner_prefs.xml
+++ b/packages/SystemUI/res/xml/tuner_prefs.xml
@@ -22,6 +22,19 @@
         android:key="status_bar"
         android:title="@string/status_bar" >
 
+
+        <com.android.systemui.tuner.StatusBarSwitch
+           android:key="camera"
+           android:title="@string/status_bar_camera" />
+
+        <com.android.systemui.tuner.StatusBarSwitch
+            android:key="location"
+            android:title="@string/status_bar_location" />
+
+        <com.android.systemui.tuner.StatusBarSwitch
+            android:key="microphone"
+            android:title="@string/status_bar_microphone" />
+
         <com.android.systemui.tuner.StatusBarSwitch
             android:key="rotate"
             android:title="@string/status_bar_settings_auto_rotation" />
